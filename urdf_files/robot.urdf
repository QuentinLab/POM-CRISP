<robot name="Mana">

<!-- root frame of robot -->
    <link name="RobotBase" />


<!-- Front cam able to look up and down -->
    <link name="FrontCamMountBase" />
    <link name="FrontCamMountHead" />
    <link name="FrontCam" />

    <joint name="FrontCamJoint1" type="fixed">
        <parent link="RobotBase"/>
        <child  link="FrontCamMountBase"/>
        <origin xyz="0 0.6 0.05" rpy="0 0 0" />
    </joint>

    <!-- moving joint -->
    <joint name="FrontCamJoint2" type="floating">
        <parent link="FrontCamMountBase"/>
        <child  link="FrontCamMountHead"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="FrontCamJoint3" type="fixed">
        <parent link="FrontCamMountHead"/>
        <child  link="FrontCam"/>
        <origin xyz="0 0 0.05" rpy="0 0 0" />
    </joint>
  
  
  
<!-- Rear cam able to look up and down -->
    <link name="RearCamMountBase" />
    <link name="RearCamMountHead" />
    <link name="RearCam" />
  
    <joint name="RearCamJoint1" type="fixed">
        <parent link="RobotBase"/>
        <child  link="RearCamMountBase"/>
        <origin xyz="0 -0.6 0.05" rpy="0 0 3.14159" />
    </joint>

    <!-- moving joint -->
    <joint name="RearCamJoint2" type="floating">
        <parent link="RearCamMountBase"/>
        <child  link="RearCamMountHead"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="RearCamJoint3" type="fixed">
        <parent link="RearCamMountHead"/>
        <child  link="RearCam"/>
        <origin xyz="0 0 0.05" rpy="0 0 0" />
    </joint>

<!-- Arm on which two sensors are mounted -->
    <link name="ArmBase"/>
    <link name="ArmHead"/>

    <joint name="ArmJoint1" type="fixed">
        <parent link="RobotBase"/>
        <child  link="ArmBase"/>
        <origin xyz="0 0 1" rpy="0 0 0"/>
    </joint>
    <!-- Single joint for whole arm -->
    <joint name="ArmJoint2" type="floating">
        <parent link="ArmBase"/>
        <child  link="ArmHead"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

<!-- Two sensors on a single arm -->
    <link name="ArmCamRight"/>
    <joint name="ArmCamRightJoint" type="fixed">
        <parent link="ArmHead"/>
        <child  link="ArmCamRight"/>
        <origin xyz="0.07 0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="ArmCamLeft"/>
    <joint name="ArmCamLeftJoint" type="fixed">
        <parent link="ArmHead"/>
        <child  link="ArmCamLeft"/>
        <origin xyz="-0.07 0 0.05" rpy="0 0 0"/>
    </joint>

</robot>




